    $(function() {
        $("#btn").click(function() {
            $('#form1').attr("action", "/");
            $('#form1').submit();
        });
        
        $("#btn_us").click(function() {
            $('#form2').submit();
        });
    })
    </script>
</head>
<body>
    <center><h1><%= title %></h1>
