<% title="Patent Historical Data" %>
<!doctype html>
<html>
<head>
    <title><%= title %></title>
    <meta charset="utf8">
    <script type="text/javascript" src="jquery-latest.js"></script>
    <script type="text/javascript">
    /*
        window.onload = function() {
