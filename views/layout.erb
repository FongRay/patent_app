        <table style="text-align:center" width="70%" border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td>Employee ID</td>
                <td width="25%">
                    <input type="text" name="txt_id" style="width:90%" value="<%= @emp_id %>" />
                </td>
                <td>Employee Name</td>
                <td width="25%">
                    <input type="text" name="txt_nm" style="width:90%" value="<%= @emp_nm %>" />
                </td>
                <td>
                    <input id="btn" type="button" value="search" />
                </td>
            </tr>
        </table>
    </form>
    <%= yield %>
